@model BlogCore.Modelos.Categoria; 

@{
    ViewData["Title"] = "Crear Categoria";
}

<br/>
</br>

<h3  class="text-center">Crear una categoria nueva </h3>
<form method="post" asp-action="Create">
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Nombre"></label>
        </div>
        <div class="col-8">
            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
        </div>
    </div>
    <br />
    <br />
    <div class="form-group row">
        <div class="col-4">
            <label asp-for="Orden"></label>
        </div>
        <div class="col-8">
            <input asp-for="Orden" class="form-control" placeholder="Ingresa el Orden" />
        </div>
    </div>

    <div class="form-group-row">
        <div class="col-8">
            <partial name="_VistaCrearVolver" />
        </div>
    </div>
</form>
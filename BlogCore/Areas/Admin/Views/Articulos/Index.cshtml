@{
    ViewData["Title"] = "Lista de Articulos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">
                Lista de Articulos
            </h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus">Crear nuevo Articulo</i>
            </a>
        </div>
    </div>
    <<br />
    <br />

    <table id="tblArticulos" class="table table-striped table-bordered" style="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha Creacion</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/Articulos.js"></script>
}